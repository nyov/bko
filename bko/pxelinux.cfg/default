MENU INCLUDE bko/bko-gui.conf
PROMPT 0
MENU TITLE --== Welcome to boot.kernel.org ==--
MENU LABEL ^BKO

LABEL bootlocal
	MENU DEFAULT
	MENU LABEL Local Boot
	TEXT HELP
		This allows you to 'Exit' from boot.kernel.org and boot
		the machine using the local disks, cd's, floppies,
		usbsticks, or whatever other media is available to boot
		from
	ENDTEXT
	localboot 0

menu include bko/live/live.conf Live Images

menu include bko/pxeknife/pxeknife.conf PXE Knife

